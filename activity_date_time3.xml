<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_movie"
    tools:context=".date_time_3">

    <TextView
        android:id="@+id/username"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="  "
        android:textColor="@color/yellow"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="Pick your date"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="243dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="Pick your Time"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="416dp"
        android:layout_height="87dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="118dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:text="10:30 AM"
            android:textColor="@drawable/select_rb"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="118dp"
            android:layout_height="52dp"
            android:layout_marginLeft="15dp"
            android:text="3:30 PM"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="118dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:text="10:00 PM"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="243dp"
        android:layout_height="51dp"
        android:text="Select No.Of.Seats"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="369dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797">

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="1"

            android:textColor="@drawable/select_rb"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="3"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:theme="@style/RadioButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />


    </RadioGroup>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="157dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        app:srcCompat="@drawable/logo_movie" />

    <Button
        android:id="@+id/button"
        android:layout_width="235dp"
        android:layout_height="46dp"
        android:background="@drawable/button"
        android:text="SELECT SEATS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>